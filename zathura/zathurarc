# Synctex
set database sqlite
set dbus-service true
set synctex true
set synctex-editor-command "nvim --headless -c "VimtexInverseSearch %l '%f'""
# set synctex-editor-command "neovim --remote-silent +%{line} %{input}"

# Basic Settings
set zoom-center "true"
set selection-clipboard clipboard
set render-loading "false"
set window-width 960
set window-height 1080


map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map w recolor
map <C-j> navigate next
map <C-k> navigate previous

